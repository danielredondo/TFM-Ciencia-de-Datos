file = {:Users/daniel/Library/Application Support/Mendeley Desktop/Downloaded/Ferlay et al. - 2007 - Estimates of the cancer incidence and mortality in Europe in 2006.pdf:pdf},
isbn = {0923-7534 (Print)},
issn = {09237534},
journal = {Annals of Oncology},
keywords = {Cancer,Deaths,Europe,Incidence,Mortality,Predictions},
number = {3},
pages = {581--592},
pmid = {17287242},
title = {{Estimates of the cancer incidence and mortality in Europe in 2006}},
